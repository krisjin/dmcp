<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hx.dmcp.dao.AdminDao">
	<insert id="addAdmin" parameterType="com.hx.dmcp.entity.Admin">
		insert into admin(email,name,password,status,createTime) value (#{email},#{name},#{password},#{status},#{createTime})
		<selectKey resultType="long" keyProperty="adminId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<delete id="deleteAdmin" parameterType="long">
		delete from admin where adminId=#{adminId}
	</delete>
	
	<update id="updateAdmin" parameterType="com.hx.dmcp.entity.Admin">
		update admin set email=#{email}, name=#{name},password=#{password},status=#{status},createTime=#{createTime} where adminId=#{adminId}
	</update>
		
	<select id="getAllList" resultType="com.hx.dmcp.entity.Admin">
		select * from admin limit #{offset},#{rows}
	</select>
	
	<select id="getAllListCount" resultType="int">
		select count(*) from admin
	</select>
	
	<select id="getAdminById" parameterType="long" resultType="com.hx.dmcp.entity.Admin">
		select * from admin where adminId=#{adminId}
	</select>
	
	<select id="getAdminByEmail" resultType="com.hx.dmcp.entity.vo.AdminVo">
		select * from admin where email=#{email}
	</select>
	
</mapper>  
